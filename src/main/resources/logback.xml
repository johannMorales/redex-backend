<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/base.xml"/>
    <appender name="SIAPP" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/simulation.log</file>
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>
   <logger name="SIMULADOR" level="INFO" additivity="false">
        <appender-ref ref="SIAPP"/>
    </logger>
</configuration>